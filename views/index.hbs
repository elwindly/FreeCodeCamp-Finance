<div class="row justify-content-center">
  <div class="col-10">
    <table class="table table-striped table-responsive table-sm">
      <thead>
        <tr>
          <th>Symbol</th>
          <th>Name</th>
          <th>Shares</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        {{#if stocks}}
          {{#each stocks}}
            {{>stockRow}}
          {{/each}}
        {{/if}}
        <tr>
          <td colspan="4">CASH</td>
          <td>{{cash}}</td>
        </tr>
        <tr>
          <td colspan="4">TOTAL</td>
          <td>{{total}}</td>
        </tr>
      </tbody>
    </table>
    </div> 
</div>




