<div class="row justify-content-center">
  <div class="col-8">
    <form method="post" action="/{{action}}">
      <div class="form-group">
        <label for="symbol">Symbol</label>
        <input type="text" class="form-control" id="symbol" name="symbol" placeholder="Symbol">
      </div>
      {{#if trade}}
      <div class="form-group">
        <label for="shares">Shares</label>
        <input type="number" class="form-control" id="shares" name="shares" placeholder="Shares" autocomplete="false">
      </div>
      {{/if}}
      <button type="submit" class="btn btn-primary">{{btnName}}</button>
    </form>
  </div>
</div>